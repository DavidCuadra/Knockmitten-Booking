@model IEnumerable<BookingCA2.Models.Client>

@{
    ViewBag.Title = "Index";
}

<style>

    body {
        background-image: url(/Images/Picture1.png);
    }
</style>



<h2><strong>KNOCKMITTEN YOUTH AND COMMUNITY CENTRE</strong></h2>

<h3><strong>Select a Client or enter a new one</strong></h3>

<h3>
    @Html.ActionLink("Create New", "Create")
</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Insurance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GardaVetting)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoiseLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberPeople)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Insurance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GardaVetting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiseLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberPeople)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClientID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ClientID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ClientID })
                @Html.ActionLink("Book a Room", "AddClientRoom", new { id = item.ClientID })
                

            </td>
        </tr>
    }

</table>
